{
  "manifest_version": 3,
  "name": "Tab Volume â€” Master Gain (Firefox)",
  "version": "1.4.0",
  "description": "Per-origin volume control: WebAudio master gain and HTML media at document_start (all frames).",
  "permissions": ["tabs", "storage", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": { "scripts": ["background.js"] },
  "action": { "default_popup": "popup.html", "default_title": "Tab Volume" },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": { "id": "tab-volume@yourdomain", "strict_min_version": "109.0" }
  }
}
